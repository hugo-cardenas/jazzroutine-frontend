lick-artist-color = #636363
lick-menu-color = gray

.lick-view
  flex: 0 1 260px
  margin-right: 30px
  margin-bottom: 30px
  min-height: 198.5px
  width: 228px
  border-radius: 3px
  background-color: lick-background-color
  font-size: lick-font-size

  .card-content
    padding: 1rem

  .dropdown-trigger
    padding-bottom: 5px
    padding-left: 10px

    .icon
      color: lick-menu-color

  .dropdown-menu
    .icon.is-small
      margin-right: 10px

  .artist
    overflow: hidden
    margin-bottom: 7.5px
    color: lick-artist-color
    text-overflow: ellipsis
    white-space: nowrap
    font-weight: bold

  .track-container
    margin-right: -16px
    margin-left: -16px

    .button
      // visibility: hidden

  .tags
    overflow: hidden
    margin-top: 20px
    height: 32px

.description
  margin-bottom: 15px
  background-color: white
  color: #4a4a4a
  font-size: lick-font-size
  font-family: BlinkMacSystemFont, -apple-system, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  -webkit-font-smoothing: antialiased

.lick .card-footer, .lick .card-footer-item
  border: 0px

.tag-container > .tags
  margin-bottom: 5px