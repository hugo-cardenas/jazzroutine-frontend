lick-artist-color = #636363
lick-menu-color = gray

.lick-view
  flex: 0 1 260px
  margin-right: 30px
  margin-bottom: 30px
  height: 220px
  border-radius: 3px
  background-color: lick-background-color
  font-size: lick-font-size

  .card-content
    padding: 1rem
    height: 145px

  .dropdown-trigger
    padding-bottom: 5px
    padding-left: 10px

    .icon
      color: lick-menu-color

  .dropdown-menu
    .icon.is-small
      margin-right: 10px

  .artist
    overflow: hidden
    margin-bottom: 7.5px
    color: lick-artist-color
    text-overflow: ellipsis
    white-space: nowrap
    font-weight: bold

  .tags
    margin-top: 20px

#track-container
  padding: 10px
  border: 1px solid lightgray
  background-color: whitesmoke
  background-size: cover

  &:hover .button
    visibility: visible

  .center
    display: block
    margin: 0 auto
    width: 52px

  .button
    visibility: hidden
    margin: 0 auto

.description
  margin-bottom: 15px
  background-color: white
  color: #4a4a4a
  font-size: lick-font-size
  font-family: BlinkMacSystemFont, -apple-system, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  -webkit-font-smoothing: antialiased

.description a
  white-space: pre-wrap /* css-3 */
  white-space: -moz-pre-wrap /* Mozilla, since 1999 */
  white-space: -pre-wrap /* Opera 4-6 */
  white-space: -o-pre-wrap /* Opera 7 */
  word-wrap: break-word /* Internet Explorer 5.5+ */

.description.textarea
  min-height: 100px

.lick .card-footer, .lick .card-footer-item
  border: 0px

.tag-container > .tags
  margin-bottom: 5px