#top-container
  fixed-container(0px, top-container-height)
  border-bottom: 1px solid border-color
  background-color: top-container-color

  .tabs
    margin-top: 4px
    font-weight: bold
    font-size: control-font-size

    ul
      border-bottom-color: top-container-color

      li
        a
          padding-bottom: 9px

      li:not(.is-active)
        a
          border-bottom-color: top-container-color
