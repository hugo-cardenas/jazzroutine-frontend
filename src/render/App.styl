html
  -webkit-app-region: drag

button, .lick-list, .lick-controls
  -webkit-app-region: no-drag

.top-container
  position: fixed
  top: 0px
  z-index: 10
  padding-top: 10px
  padding-right: 50px
  padding-left: 50px
  width: 100%
  height: 160px
  background-color: #fff

header
  text-align: center

.main-header
  margin-bottom: 50px

.main-content
  margin: 0 auto
  margin-top: 170px
  width: 876px /* 900 - 12 left margin - 12 right margin */

.lick-controls
  position: fixed
  z-index: 10
  margin-top: -70px
  margin-bottom: 20px

.lick-list
  .column
    width: 300px

.suggestion-container-open
  overflow-y: scroll
  max-height: 450px
  border: 1px solid lightgray
  background-color: rgba(255, 255, 255, 0.9)

.suggestion, .section-title
  padding: 5px 10px

.suggestion-highlighted
  background-color: rgba(245, 245, 245, 0.9)

.lick-filters
  margin-top: 6px
  margin-left: 15px
  max-width: 553px