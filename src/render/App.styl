
top-container-height = 54px
container-width = 876px /* 900 - 12 left margin - 12 right margin */
top-container-color = #ffffff
main-container-color = #ffffff

html
  -webkit-app-region: drag

button, .lick-list, .lick-controls
  -webkit-app-region: no-drag

.main-container
  background-color: main-container-color

.top-container
  position: fixed
  top: 0px
  z-index: 10
  margin-bottom: 50px
  padding-top: 7px
  padding-right: 50px
  padding-left: 50px
  width: 100%
  height: top-container-height
  border-bottom: 1px solid lightgray
  background-color: top-container-color
  text-align: center

nav-button-horizontal-padding = 40px

#navigation
  display: inline-block

  p
    display: inline-block

    a
      padding-right: nav-button-horizontal-padding
      padding-left: nav-button-horizontal-padding

#lick-controls
  #button-lick-create
    border-radius: 50%
    display: inline-block
    margin-right: 20px
  #search-container
    display: inline-block

.main-content
  margin: 0 auto
  margin-top: top-container-height + 20px
  width: container-width

.lick-list
  .column
    width: 300px

.suggestion-container-open
  overflow-y: scroll
  max-height: 450px
  border: 1px solid lightgray
  background-color: rgba(255, 255, 255, 0.9)

.suggestion, .section-title
  padding: 5px 10px

.suggestion-highlighted
  background-color: rgba(245, 245, 245, 0.9)

.lick-filters
  margin-top: 6px
  margin-left: 15px
  max-width: 553px