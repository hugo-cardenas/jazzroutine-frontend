.lick
  border: none
  border-radius: 3px
  background-color: item-color

// TODO Clean up
.dropdown-menu
  .icon.is-small
    margin-right: 10px

.card-content
  padding: 1rem
  margin-bottom: 10px

.dropdown-trigger
  padding-left: 10px
  padding-bottom: 5px

  .icon
    color: gray

  .button:hover
    color: #6f6f6f

// ---
.lick-form
  .artist
    margin-bottom: 10px

.lick-view
  .card-content
    height: 145px

  .artist
    font-weight: bold
    font-size: 14px
    color: gray
    margin-bottom: 7.5px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

  .card-footer-item
    justify-content: flex-start

  time
    color: darkgray
    margin-left: 5px

.description
  margin-bottom: 15px
  background-color: white
  color: #4a4a4a
  font-size: 14px
  font-family: BlinkMacSystemFont, -apple-system, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  -webkit-font-smoothing: antialiased

.description a
  white-space: pre-wrap /* css-3 */
  white-space: -moz-pre-wrap /* Mozilla, since 1999 */
  white-space: -pre-wrap /* Opera 4-6 */
  white-space: -o-pre-wrap /* Opera 7 */
  word-wrap: break-word /* Internet Explorer 5.5+ */

.description.textarea
  min-height: 100px

.lick .card-footer, .lick .card-footer-item
  border: 0px

.tag-container > .tags
  margin-bottom: 5px
