{
  "name": "lickit",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "blob-to-buffer": "^1.2.6",
    "bulma": "^0.5.1",
    "cuid": "^1.3.8",
    "electron": "^1.6.11",
    "electron-context-menu": "^0.9.1",
    "electron-json-storage": "^3.0.5",
    "extract-zip": "=1.6.0",
    "joi-browser": "^10.0.6",
    "lodash": "^4.17.4",
    "make-dir": "^1.0.0",
    "pify": "^3.0.0",
    "prop-types": "^15.5.10",
    "radium": "^0.19.6",
    "react": "^15.6.2",
    "react-autosuggest": "^9.3.2",
    "react-dom": "^15.6.2",
    "react-linkifier": "^3.1.1",
    "react-recorder": "git://github.com/hugo-cardenas/react-recorder.git#ec1e07fa785dd7fc108863c90500bbffe2fbd71a",
    "react-redux": "^5.0.5",
    "react-tooltip": "^3.4.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "sweetalert2": "^7.3.4",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "codecov": "^2.2.0",
    "css-loader": "^0.28.4",
    "electron-packager": "^8.7.2",
    "enzyme": "^2.9.1",
    "eslint": "^4.9.0",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.4",
    "prettier": "^1.9.2",
    "randomcolor": "^0.5.3",
    "react-addons-perf": "^15.4.2",
    "react-test-renderer": "^15.5.4",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "tmp": "0.0.31",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.9.2",
    "webpack-merge": "^4.1.0",
    "@storybook/react": "^3.3.10",
    "@storybook/addon-actions": "^3.3.10",
    "@storybook/addon-links": "^3.3.10",
    "@storybook/addons": "^3.3.10"
  },
  "main": "./dist/app",
  "prettier": {
    "jsxBracketSameLine": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "scripts": {
    "build": "npm run build-bundle && npm run build-package && npm run build-dmg",
    "build-bundle": "webpack --config ./config/webpack.electron.js",
    "build-package": "electron-packager . Lickit --platform=darwin --arch=x64 --icon=./assets/icon.icns --overwrite --osxSign=true --out=./pkg --ignore='.babelrc|.gitignore|.jsbeautifyrc|config|coverage|LICENSE|node_modules|public|README.md|src|test'",
    "build-dmg": "cd ./pkg/Lickit-darwin-x64 && (rm Lickit*.dmg || echo 'No previous dmg found') && create-dmg ./Lickit.app",
    "format": "prettier --write '{src,test}/**/*.{js,json}'",
    "start": "concurrently 'npm run start-react' 'wait-on --config wait-on.config.json http://localhost:3000 && npm run start-electron'",
    "start-electron": "ELECTRON_ENV=development electron ./src/app",
    "start-react": "webpack-dev-server --config ./config/webpack.dev.js",
    "test": "NODE_PATH=. jest --config=./test/jest.config.json",
    "test-ci": "npm test -- --coverage && codecov",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "optionalDependencies": {
    "create-dmg": "^2.0.0"
  }
}
